data = diamonds
ggplot(data, aes(x = cut, fill = cut))+
geom_bar()
ggplot(data, aes(x = cut, fill = clarity))+
geom_bar()
# Otra disposición útil:
ggplot(data, aes(x = cut, fill = clarity))+
geom_bar(position = "dodge")
